{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "lambdacg-updater/*": [
                 "src/*" 
            ],
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": [ "test/**/*" ]
}
