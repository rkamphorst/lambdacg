{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "lambdacg-resolver/*": [
                "src/*"
            ],
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "**/test/*"
    ],
    "references": [
        {
            "path": "../lambdacg-contract"
        }
    ]
}
