{
  "name": "lambdacg",
  "scripts": {
    "prepare": "npm-run-all prepare:*",
    "prepare:contract": "cd lambdacg-contract && npm ci",
    "prepare:resolver": "cd lambdacg-resolver && npm ci",
    "prepare:updater": "cd lambdacg-updater && npm ci",
    "test": "npm-run-all test:*",
    "test:resolver": "cd lambdacg-resolver && npm test",
    "test:updater": "cd lambdacg-updater && npm test",
    "test-coverage": "npm-run-all test-coverage:*",
    "test-coverage:resolver": "cd lambdacg-resolver && npm run test-coverage",
    "test-coverage:updater": "cd lambdacg-updater && npm run test-coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "eslint": "^8.4.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "npm-run-all": "^4.1.5"
  }
}
