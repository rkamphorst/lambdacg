    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "lambdacg-resolver tests",
            "program": "${workspaceFolder}/lambdacg-resolver/test/node_modules/mocha/bin/mocha",
            "args": [
                "--require", "ts-node/register",
                "--extensions", "ts,tsx",
                "--watch",
                "--watch-files",
                "${workspaceFolder}/lambdacg-resolver/src",
                "--watch-files",
                "${workspaceFolder}/lambdacg-resolver/test",
                "--colors",
                "${workspaceFolder}/lambdacg-resolver/test/**/*.test.ts"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "skipFiles": [
            "<node_internals>/**"
            ]
        }
    ]
}